---
import speakingData from "../data/speakingData.json";
---

<section>
  {
    speakingData.map(year => (
      <section id="all-talks">
        <h3>{year.year}</h3>
        <ul>
          {year.content.map(talk => (
            <li>
              <a
                href={talk.link}
                class="inline-block text-lg font-medium text-skin-accent decoration-dashed underline-offset-4 hover:underline focus-visible:no-underline focus-visible:underline-offset-0"
                target="_blank"
                rel="noopener noreferrer"
              >
                {talk.title}
              </a>
            </li>
          ))}
        </ul>
      </section>
    ))
  }

  <style>
    #all-talks {
      @apply max-w-3xl px-4 pb-4;
    }
    #all-talks h3 {
      @apply text-2xl font-semibold sm:text-3xl;
    }
    #all-talks li {
      @apply mb-6 mt-2 text-xl font-medium italic focus-visible:outline-dashed;
    }
  </style>
</section>
