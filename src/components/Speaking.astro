---
import speakingData from "../data/speakingData.json"
---

<section>
  {
    speakingData.map((year) => (
      <section id="all-talks">
        <h3>{year.year}</h3>
        <ul>
          {year.content.map((talk) => (
            <li>
              <a
                href={talk.link}
                class="text-skin-accent inline-block text-lg font-medium decoration-dashed underline-offset-4 hover:underline focus-visible:no-underline focus-visible:underline-offset-0"
                target="_blank"
                rel="noopener noreferrer"
              >
                {talk.title}
              </a>
            </li>
          ))}
        </ul>
      </section>
    ))
  }

  <style>
    @reference "../styles/base.css";
    section {
      @apply mx-auto w-full max-w-4xl px-4 pb-4;
    }
    #all-talks {
      @apply max-w-4xl px-4 pb-4;
    }
    #all-talks h3 {
      @apply text-2xl font-semibold sm:text-3xl;
    }
    #all-talks li {
      @apply mt-2 mb-6 text-xl font-medium italic focus-visible:outline-dashed;
    }
  </style>
</section>
